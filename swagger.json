            "CredentialRequest": {
                "description": "Input fields for the create operation.",
                "type": "object",
                "additionalProperties": false,
                "properties": {
                    "subjectDid": {
                        "description": "This input field is the holder's DID",
                        "type": "string"
                    },
                    "attributes": {
                        "type": "object"
                    },
                    "@context": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "type": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        }
                    },
                    "expirationDate": {
                        "type": "string"
                    }
                },
                "required": [
                    "subjectId",
                    "attributes"
                ],
                "example": {
                    "subjectDid": "did:key:z6MkhaXgBZDvotDkL5257faiztiGiC2QtKLGpbnnEGta2doK",
                    "attributes": {
                        "gender": "male",
                        "name": "Bob",
                        "@context": [
                            "https://schema.org/Person"
                        ],
                        "type": [
                            "Person"
                        ]
                    }
                }
            },
            "Credential": {
