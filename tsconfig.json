{
  "compilerOptions": {
    "outDir": "./dist",
    "module": "ESNext",
    "target": "esnext",
    "lib": ["esnext", "DOM"],
    "alwaysStrict": true,
    "strict": true,
    "preserveConstEnums": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "esModuleInterop": true,
    "types": [
      "node",
      "@cloudflare/workers-types",
      "@types/jest",
      "@types/service-worker-mock"
    ]
  },
  "include": ["src", "test"],
  "exclude": ["node_modules", "dist"]
}
